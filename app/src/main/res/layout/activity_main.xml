<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Радиогруппа для выбора формата фотографий -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioButton9x12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9x12 (100 руб.)"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/radioButton10x15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10x15 (150 руб.)"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/radioButton18x24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18x24 (300 руб.)"
            android:textSize="16sp"/>
    </RadioGroup>

    <!-- Поле для ввода количества фотографий -->
    <EditText
        android:id="@+id/editTextQuantity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Введите количество"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Кнопка для расчета -->
    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рассчитать"
        android:padding="12dp"/>
</LinearLayout>
